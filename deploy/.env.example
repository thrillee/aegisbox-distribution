# Database
DATABASE_URL=postgres://aegisbox:aegisbox@postgres:5432/aegisbox_dev?sslmode=disable

# Manager API
API_ADDR=:8001
API_READ_TIMEOUT=10s
API_WRITE_TIMEOUT=10s

# SMPP Gateway
SMPP_SYSTEM_ID=your_system_id
SMPP_PASSWORD=your_password
SMPP_SYSTEM_TYPE=
SMPP_ADDR_TON=1
SMPP_ADDR_NPI=1
SMPP_BIND_MODE=2
SMPP_RECONNECT_DELAY=5s
SMPP_ENQUIRE_LINK_INTERVAL=30s
SMPP_RESPONSE_TIMEOUT=10s

# Logging
LOG_LEVEL=info

# Grafana (optional overrides)
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin
