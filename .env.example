# =============================================================================
# Aegisbox Distribution - Environment Configuration
# =============================================================================
# Copy this file to .env and update values before deployment

# =============================================================================
# Database Configuration
# =============================================================================
POSTGRES_USER=aegisbox
POSTGRES_PASSWORD=secure_password_change_this
POSTGRES_DB=aegisbox_prod
DATABASE_URL=postgres://aegisbox:secure_password_change_this@postgres:5432/aegisbox_prod?sslmode=disable

# =============================================================================
# Image Tag (override with CI/CD pipeline)
# =============================================================================
TAG=docker-prod

# =============================================================================
# Manager API Configuration
# =============================================================================
API_ADDR=:8001
API_READ_TIMEOUT=10s
API_WRITE_TIMEOUT=10s

# =============================================================================
# SMPP Gateway Configuration
# =============================================================================
SMPP_SYSTEM_ID=your_smpp_system_id
SMPP_PASSWORD=your_smpp_password
SMPP_SYSTEM_TYPE=
SMPP_ADDR_TON=1
SMPP_ADDR_NPI=1
SMPP_BIND_MODE=2
SMPP_RECONNECT_DELAY=5s
SMPP_ENQUIRE_LINK_INTERVAL=30s
SMPP_RESPONSE_TIMEOUT=10s

# =============================================================================
# Portal Configuration
# =============================================================================
PORTAL_API_URL=http://manager-api:8001
PORTAL_BASE_URL=/

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL=info

# =============================================================================
# Service Ports (change if ports are in use)
# =============================================================================
POSTGRES_PORT=5432
API_PORT=8001
SMPP_PORT=2775
PORTAL_PORT=3001
GRAFANA_PORT=3000
PROMETHEUS_PORT=9090
LOKI_PORT=3100

# =============================================================================
# Grafana Configuration
# =============================================================================
GRAFANA_USER=admin
GRAFANA_PASSWORD=secure_password_change_this
GF_USERS_ALLOW_SIGN_UP=false
